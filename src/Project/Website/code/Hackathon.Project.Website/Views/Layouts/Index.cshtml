@using Sitecore.Mvc
@using Sitecore.Mvc.Analytics.Extensions

@{

    Layout = "_Base.cshtml";
}

<!-- Masthead -->
<header class="masthead">
    <div class="container h-100">
        <div class="row h-100 align-items-center justify-content-center text-center">
            <div class="col-lg-10 align-self-end">
                <h1 class="text-uppercase text-white font-weight-bold">@Html.Sitecore().Field("Heading")</h1>
                <hr class="divider my-4">
            </div>
            <div class="col-lg-8 align-self-baseline">
                <p class="text-white-75 font-weight-light mb-5">@Html.Sitecore().Field("Content")</p>
                <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">Find Out More</a>
            </div>
        </div>
    </div>
</header>
<!-- About Section -->
<section class="page-section bg-primary" id="about">
    <div class="container">
        @Html.Sitecore().Placeholder("phContent")
    </div>
</section>

<section class="page-section" id="services">
    <div class="container">
        @Html.Sitecore().Placeholder("phForm")
    </div>
</section>

<!-- Footer -->
<footer class="bg-light py-5">
    <div class="container">
        <div class="small text-center text-muted">Copyright &copy; 2020 - DropBears</div>
    </div>
</footer>
